{% extends 'base.html.twig' %}

{% block meta_description %} {{ article.chapo }} {% endblock %}
{% block title %}{{ article.title }}{% endblock %}

{% block body %}

    <div class="main-content px-5">

        <h1> {{ article.title }} </h1>

        <p> {{ article.catchPhrase }} </p>
        
        <button class="btn btn-primary"> PARTAGER CET ARTICLE </button>

        {# directive twig : petite fonctionalit√© twig qui permet de parser une date #}
        <div> {{ article.author }} {{ article.date|date('d-m-Y') }} </div>

        <div>
            <img src="{{ asset('build/images/' ~ article.picture ) }}" alt="{{ article.chapo }}" title="{{ article.chapo }}" />
            <p> {{ article.legendMainPicture }} </p>
        </div>

    </div>

    <div class="col-md-6 mx-auto">
        <h2> Articles similaires </h2>

        <div class="d-flex">
            {% for relatedArticle in relatedArticles %} 

                <div class="article d-flex my-3">
                    <a class="d-flex text-decoration-none text-reset" href="{{ path('show_article_by_id', { id : relatedArticle.id }) }}">
                        <img src="{{ asset('build/images/' ~ relatedArticle.picture ) }}" />
                        <div class="d-flex flex-column ps-2">   
                            <h6>{{ relatedArticle.title }} - {{ relatedArticle.date|date("d-m-Y") }} </h6>
                            <p>{{ article.chapo }} </p>
                        </div>
                    </a>
                </div>

            {% endfor %}   
        </div>
    </div>

{% endblock %}
